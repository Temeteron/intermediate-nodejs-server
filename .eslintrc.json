{
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "curly": ["error", "multi-line"]
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  }
}
